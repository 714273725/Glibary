<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/bg_top_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/small_item_height">
    <CheckBox
        android:clickable="false"
        android:visibility="gone"
        android:id="@+id/cbSelectPageAll"
        android:layout_marginLeft="@dimen/side_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全选"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="()"
            android:paddingRight="@dimen/side_item"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSettlement"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="center"
        android:paddingLeft="@dimen/side_item"
        android:paddingRight="@dimen/side_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入购物车"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="()"
            android:visibility="gone"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>